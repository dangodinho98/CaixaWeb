@model Caixa.Web.Models.IndexViewModel
@{
    ViewBag.Title = "Configurações";
}

<h2>@ViewBag.Title</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Mude as configurações da sua conta</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Senha:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Alterar senha", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Criar", "SetPassword")
            }
            ]
        </dd>
        @if (Model.HasSecurityLevel)
            {
            <dt>Permissões:</dt>
            <dd>
                [
                @Html.ActionLink("Alterar nível de segurança", "Index", "Securities")
                ]
            </dd>
        }
        </dl>
    </div>
