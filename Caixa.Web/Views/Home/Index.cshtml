@{
    ViewBag.Title = "Home Page";
}

@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
<div class="jumbotron">
    <h1>Acertos</h1>
    <p class="lead">Consulte ou realize novos lançamentos de acerto. (Autenticação necessária.)</p>
    <p><a href="~/Acerto/Create" class="btn btn-primary btn-lg">Lançar Acerto &raquo;</a></p>
</div>
}
else
{
    <div class="jumbotron">
        <h1>Acertos</h1>
        <p class="lead">Consulte ou realize novos lançamentos de acerto. (Autenticação necessária.)</p>
        <p><a href="~/Account/Login" class="btn btn-primary btn-lg">Acessar conta &raquo;</a></p>
    </div>
}